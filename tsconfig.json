{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "amd",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": true,
    "outDir": "./dist",
    "lib": [
      "es2015",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@oracle/oraclejet/dist/types",
      "./node_modules/@types"
    ],
    "declaration": true,
    "noEmitOnError": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ]
}